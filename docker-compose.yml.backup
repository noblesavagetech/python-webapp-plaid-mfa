version: '3.8'
services:
  web:
    build: .
    ports:
      - "5000:5000"
    environment:
      - DATABASE_URL=postgresql://postgres:postgres@db:5432/postgres
      - FLASK_ENV=development
      - SECRET_KEY=dev-secret-key-change-in-production
      - JWT_SECRET_KEY=jwt-dev-secret-key-change-in-production
      - MAIL_SERVER=smtp
      - MAIL_PORT=25
      - MAIL_USE_TLS=False
      - MAIL_USERNAME=
      - MAIL_PASSWORD=
      - MAIL_DEFAULT_SENDER=noreply@bbaservices.local
    depends_on:
      - db
      - smtp
    networks:
      - app-network
  db:
    image: postgres:15
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
      POSTGRES_DB: postgres
    volumes:
      - postgres_data:/var/lib/postgresql/data
    networks:
      - app-network
  smtp:
    build:
      context: .
      dockerfile: Dockerfile.smtp
    container_name: smtp
    environment:
      - GMAIL_USER=${GMAIL_USER}
      - GMAIL_APP_PASSWORD=${GMAIL_APP_PASSWORD}
    ports:
      - "25:25"
    networks:
      - app-network

volumes:
  postgres_data:

networks:
  app-network:
    driver: bridge
