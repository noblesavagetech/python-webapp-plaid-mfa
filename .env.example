# Copy to .env and fill in values
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
DATABASE_URL=postgresql://postgres:postgres@db:5432/postgres

# Wave Apps Integration
WAVE_CLIENT_ID=your-wave-client-id
WAVE_CLIENT_SECRET=your-wave-client-secret
WAVE_REDIRECT_URI=your-redirect-uri
CORS_ORIGINS=http://localhost:3000

# AWS Configuration (Required for Pinpoint)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1

# Amazon Pinpoint Configuration (Enhanced Messaging)
PINPOINT_APPLICATION_ID=your_pinpoint_application_id
PINPOINT_SENDER_EMAIL=verified-sender@yourdomain.com
PINPOINT_ORIGINATION_NUMBER=+1234567890  # Optional: Dedicated SMS number

# Brevo Email Configuration (Fallback)
BREVO_API_KEY=your_brevo_api_key
SENDER_EMAIL=noreply@yourdomain.com
SENDER_NAME=BBA Services

# Legacy Email SMTP Configuration (Deprecated)
GMAIL_USER=your-email@domain.com
GMAIL_APP_PASSWORD=your-app-password-here
