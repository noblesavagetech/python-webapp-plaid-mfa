{
  "$schema": "https://railway.app/railway.schema.json",
  "build": { 
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": { 
    "restartPolicyType": "ON_FAILURE",
    "startCommand": "gunicorn --bind 0.0.0.0:$PORT --timeout 120 --workers 1 --threads 2 --log-level debug app:app"
  }
}